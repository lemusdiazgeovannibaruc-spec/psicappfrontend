<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_backgraund2"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Lista de mensajes (ocupa la mayor parte de la pantalla) -->
    <ListView
        android:id="@+id/listViewConversacion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Contenedor horizontal para el campo de mensaje y el botón Enviar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <!-- Campo de mensaje -->
        <EditText
            android:id="@+id/editTextMensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Escribe un mensaje"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/rounded_background"
            android:padding="10dp" />

        <!-- Botón para Enviar (MaterialButton) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEnviar"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Enviar"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/purple_500"
            app:cornerRadius="8dp"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp" />
    </LinearLayout>

</LinearLayout>
