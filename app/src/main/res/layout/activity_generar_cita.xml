<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_backgraund2"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Título / Nombre del Doctor -->
        <TextView
            android:id="@+id/tvDoctorNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_marginTop="40dp"
            android:padding="8dp" />

        <!-- Lista de Horarios Disponibles -->
        <ListView
            android:id="@+id/lvHorariosDisponibles"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

        <!-- Botón para Confirmar Cita (MaterialButton) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmarCita"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar Cita"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_500"
            app:cornerRadius="8dp"
            android:layout_marginTop="16dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
