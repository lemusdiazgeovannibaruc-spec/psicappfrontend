<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_backgraund2"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configurar Cita"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/black"
            android:layout_marginTop="40dp"
            android:padding="8dp"/>


        <!-- Botón: Seleccionar Fecha (MaterialButton) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFecha"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Fecha"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_500"
            app:cornerRadius="8dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp"
            android:padding="12dp" />

        <!-- Botón: Seleccionar Hora Inicio (MaterialButton) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHoraInicio"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Hora Inicio"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_500"
            app:cornerRadius="8dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp"
            android:padding="12dp" />

        <!-- Botón: Seleccionar Hora Fin (MaterialButton) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHoraFin"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Hora Fin"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_500"
            app:cornerRadius="8dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
